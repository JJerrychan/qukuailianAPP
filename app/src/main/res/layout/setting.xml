<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置   "
            android:textSize="20sp"
            android:padding="20dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:gravity="center"
            android:drawableLeft="@mipmap/arrowleft"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/buttonjump"
                android:drawableLeft="@mipmap/account"
                android:drawableRight="@mipmap/arrow"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="营业员账户"
                android:textColor="#000000"
                android:textSize="16sp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="公司资料\n简介、图片、地址、联系人、邮箱    "
                android:gravity="center|left"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:drawableLeft="@mipmap/document"
                android:drawableRight="@mipmap/arrow"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:background="@drawable/buttonjump"
                android:drawablePadding="10dp"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">




            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="手机绑定"
                android:gravity="center|left"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:drawableLeft="@mipmap/iphone"
                android:drawableRight="@mipmap/arrow"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:textSize="16sp"
                android:background="@drawable/buttonjump"
                android:drawablePadding="10dp"/>

            <View
                android:id="@+id/view3"
                android:layout_below="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_height="0.5dip"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/bt_4"
                android:layout_below="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="银行卡绑定"
                android:textColor="#000000"
                android:drawableLeft="@mipmap/bank"
                android:drawableRight="@mipmap/arrow"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:gravity="center|left"
                android:textSize="16sp"
                android:background="@drawable/buttonjump"
                android:drawablePadding="10dp"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_4">

            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="安全与隐私\n修改密码、密码提示问题、接受推荐"
                android:gravity="center|left"
                android:textColor="#000000"
                android:drawableLeft="@mipmap/security"
                android:drawableRight="@mipmap/arrow"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:background="@drawable/buttonjump"
                android:drawablePadding="10dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="公司实名认证"
                android:gravity="center|left"
                android:drawableLeft="@mipmap/company"
                android:drawableRight="@mipmap/arrow"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:background="@drawable/buttonjump"
                android:drawablePadding="10dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="关于信预"
                android:textColor="#000000"
                android:gravity="center|left"
                android:drawableLeft="@mipmap/essence"
                android:drawableRight="@mipmap/arrow"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:background="@drawable/buttonjump"
                android:drawablePadding="10dp"/>


        </RelativeLayout>

        <Button

            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="切换账号"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:background="@drawable/button"/>


        <Button

            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="退出登录"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#F5F5F5"/>


    </LinearLayout>

</ScrollView>
