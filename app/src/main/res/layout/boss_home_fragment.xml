<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <TextView
        android:id="@+id/tv_boss_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商家名称"
        android:gravity="center"
        android:textColor="#212121"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardv_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardElevation="18dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#1677FF"
        app:contentPadding="10dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODAY"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:layout_above="@+id/rc_boss_1"
                android:layout_alignParentTop="true"
                android:textColor="#FFFF"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_boss_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:overScrollMode="never"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb_boss_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="#303F9F"
        app:tabTextColor="#212121"
        app:tabIndicatorFullWidth="false">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_boss_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>
