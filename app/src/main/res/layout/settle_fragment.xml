<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_settle"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/LL_1"
        android:padding="15dp" />
    <LinearLayout
            android:id="@+id/LL_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp">
        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            style="@style/SuperButton.Blue"
            android:id="@+id/bd_settle_add"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/flatbutton"
            android:textSize="50px"
            android:text="添加项目"
            app:sCornersRadius="8dp"/>
        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            style="@style/SuperButton.Blue"
            android:id="@+id/bd_settle_pay"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/flatbutton"
            android:textSize="50px"
            android:text="结算"
            app:sCornersRadius="8dp"/>
        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            style="@style/SuperButton.Blue"
            android:id="@+id/bd_settle_cash"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/flatbutton"
            android:textSize="50px"
            android:text="收款"
            app:sCornersRadius="8dp"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rc_settle"
        android:layout_marginBottom="25dp">
        <TextView
            android:id="@+id/tv_settle_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="合计消费（元）"
            android:layout_gravity="center"/>
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="消费金额"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#B2EBF2"
            app:met_floatingLabelText="金额"
            android:id="@+id/ed_settle_money"
            android:enabled="true"
            app:met_underlineColor="#00796B"
            app:met_floatingLabelAnimating="true"
            android:textColor="#212121"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        android:layout_below="@+id/LL_4"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:layout_marginTop="20dp"
                android:id="@+id/stv_settle_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sLeftTopTextString="顾客姓名："
                app:sCenterTopTextString="wang"
                app:sLeftTextString="顾客手机号："
                app:sCenterTextString="13245357468"
                app:sLeftBottomTextString="已完成支付"
                app:sLeftViewGravity="left_center"
                app:sCenterViewGravity="right_center"
                app:sDividerLineType="none"
                app:sUseRipple="false"/>
            <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/btn_settle_1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="已支付"
                style="@style/ButtonView.Blue"
                app:textRadius="3dp"
                android:layout_below="@+id/stv_settle_1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>

