<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Presenter.activity.bankcard.bankcardlistview">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="15dp"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/bankimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/appblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国建设银行储蓄卡"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"/>


            <TextView
                android:id="@+id/xx"
                android:layout_toRightOf="@id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                android:textSize="16sp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/id_number"
                android:layout_toRightOf="@id/xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6430"
                android:textSize="16sp"
                android:layout_marginLeft="3dp"/>


            <TextView
                android:id="@+id/id_search"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可转账、查询账单"
                android:layout_below="@id/id_name"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/id_card"
                android:layout_marginTop="5dp"
                android:layout_below="@id/id_name"
                android:layout_toRightOf="@id/id_search"
                android:layout_marginLeft="92dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注银行卡"
                android:textSize="13sp"/>


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

</LinearLayout>