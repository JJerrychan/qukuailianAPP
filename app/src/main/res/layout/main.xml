<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cq.xinyupintai.Presenter.activity.MainView"
    android:orientation="vertical"
    android:background="@drawable/background3">


    <RelativeLayout
        android:id="@+id/MainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background3">


        <TextView
            android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/title"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="信预(区块链)预付消费系统\n商家平台"
            android:textColor="#fff"
            android:textSize="22sp" />


        <RelativeLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_below="@+id/id1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/background2">


            <com.cq.xinyupintai.ui.Titanic.TitanicTextView
                android:id="@+id/id_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="34dp"
                android:gravity="center"
                android:text="Welcome Login !"
                android:textColor="#000"
                android:textSize="20sp"
                tools:ignore="MissingClass" />

            <EditText
                android:id="@+id/user"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/id_hello"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:drawablePadding="10dp"
                android:hint="@string/edittext_hintuser"
                android:padding="10dp"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/clearn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="115dp"
                android:background="@mipmap/delete" />


            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/user"
                android:layout_centerHorizontal="true"
                android:drawableRight="@mipmap/close_eye"
                android:drawablePadding="10dp"
                android:hint="@string/edittext_hintpwd"
                android:padding="10dp"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/clearnpwd"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="173dp"
                android:background="@mipmap/delete" />


            <com.cq.xinyupintai.ui.Animbutton
                android:id="@+id/bt"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_below="@id/password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="登陆"
                android:textColor="#ffffff"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/forgetpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="30dp"
                android:text="忘记密码"
                android:textColor="@color/appblue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/newuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/forgetpass"
                android:text="快速注册"
                android:textColor="@color/appblue"
                android:textSize="16sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:lines="2"
            android:maxLines="2"
            android:text="登录即代表您已经同意《信预网商家协议》\n使用即代表信预登录时将获取您的头像昵称等公开信息"
            android:textColor="#fff" />


    </RelativeLayout>


</LinearLayout>
