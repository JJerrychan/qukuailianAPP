<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="3dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFE0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_2">

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:text="时间" />

            <TextView
                android:id="@+id/tv_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:layout_marginLeft="20dp"
                android:text="手机号" />
            <TextView
                android:id="@+id/tv_item_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:layout_marginLeft="20dp"
                android:text="评价星级"/>
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预付卡名称"
                android:layout_margin="3dp"
                android:padding="3dp"/>
        </LinearLayout>
            <TextView
                android:id="@+id/tv_item_eva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="评语"
                android:layout_below="@+id/LL_2"/>
        <Button
            android:id="@+id/bt_request"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/tv_item_eva"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:text="回复"
            android:textSize="12dp"
            android:background="@drawable/flatbutton"
            android:textColor="#3E2723"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>