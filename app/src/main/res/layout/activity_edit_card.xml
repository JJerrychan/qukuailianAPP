<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Presenter.EditCard">

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="-35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加/编辑"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:text="卡  编  号："
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/self_num_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:hint="请输入预付卡的自编号"
                android:padding="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:text="预付卡名："
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/card_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:hint="请输入您给预付卡起的名称"
                android:padding="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:text="面值(元)："
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/value_edittext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:hint="输入整数  "
                android:padding="5dp"
                android:textSize="13sp" />

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:text="消费折扣(%)："
                android:layout_width="96dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/discount_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:hint="两位整数"
                android:padding="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:text="联盟卡："
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/isunion_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="是"
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="否"
                    android:textColor="@color/colorPrimary" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="42dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:text="类 别:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/category_textview"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border"
                android:padding="8dp"
                android:textSize="10sp" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/category_btn"
                android:layout_marginLeft="-50dp"
                android:background="@android:drawable/arrow_down_float"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>

        <EditText
            android:padding="5dp"
            android:gravity="start"
            android:textSize="5pt"
            android:hint="请输入该卡的相关说明"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <GridLayout
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@android:drawable/ic_input_add" />

            <TextView
                android:text="请选择预付卡的封面图片"
                android:layout_gravity="bottom" />
        </GridLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton

                android:text="提交"
                android:layout_height="50dp"
                android:layout_width="50dp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:text="取消"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </TableLayout>
    </LinearLayout>


</LinearLayout>