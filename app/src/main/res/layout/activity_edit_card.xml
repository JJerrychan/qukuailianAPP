<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/liji_c_blue"
    tools:context=".Presenter.activity.EditCard">

    <Button
        android:layout_alignParentStart="true"
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/liji_c_blue"
        android:text="返回"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加/编辑"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textSize="25sp" />

    <ScrollView
        android:scrollbars="none"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@color/liji_c_blue"
                    android:textSize="15sp"
                    android:text="卡  编  号："
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/self_num_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:hint="请输入预付卡的自编号"
                    android:padding="5dp"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@color/liji_c_blue"
                    android:textSize="15sp"
                    android:text="预付卡名："
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/card_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:hint="请输入您给预付卡起的名称"
                    android:padding="5dp"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@color/liji_c_blue"
                    android:textSize="15sp"
                    android:text="面值(元)："
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/value_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:hint="输入整数  "
                    android:padding="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@color/liji_c_blue"
                    android:textSize="15sp"
                    android:text="消费折扣(%)："
                    android:layout_width="96dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/discount_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:hint="两位整数"
                    android:padding="5dp"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@color/liji_c_blue"
                    android:textSize="15sp"
                    android:text="联盟卡："
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/isunion_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="是"
                        android:textColor="@color/liji_c_blue" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="否"
                        android:textColor="@color/liji_c_blue" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textColor="@color/liji_c_blue"
                    android:textSize="15sp"
                    android:text="类别："
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/category_textview"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/category_btn"
                    android:layout_marginLeft="-50dp"
                    android:background="@android:drawable/arrow_down_float"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <EditText
                android:padding="5dp"
                android:gravity="start"
                android:textSize="5pt"
                android:hint="请输入该卡的相关说明"
                android:background="@drawable/border"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <GridLayout
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@android:drawable/ic_input_add" />

                <TextView
                    android:text="请选择预付卡的封面图片"
                    android:layout_gravity="bottom" />
            </GridLayout>

            <LinearLayout

                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/submit_btn"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="提交"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/cancel_button"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="取消"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>