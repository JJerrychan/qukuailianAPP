<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#64B5F6"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="消费项目"
            android:layout_alignLeft="@+id/ed_commdity_name"/>
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="消费项目"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#B2EBF2"
            app:met_floatingLabelText="项目名称"
            android:id="@+id/ed_commdity_name"
            android:enabled="true"
            app:met_underlineColor="#00796B"
            app:met_floatingLabelAnimating="true"
            android:textColor="#212121"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="数量"
            android:layout_alignLeft="@+id/ed_commdity_number"
            android:layout_below="@+id/ed_commdity_name"/>
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="数量"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#B2EBF2"
            app:met_floatingLabelText="数量"
            android:id="@+id/ed_commdity_number"
            android:enabled="true"
            app:met_underlineColor="#00796B"
            app:met_floatingLabelAnimating="true"
            android:textColor="#212121"
            android:layout_below="@+id/ed_commdity_name"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="单价"
            android:layout_alignLeft="@+id/ed_commdity_yuan"
            android:layout_below="@+id/ed_commdity_number"/>
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="单价"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#B2EBF2"
            app:met_floatingLabelText="单价"
            android:id="@+id/ed_commdity_yuan"
            android:enabled="true"
            app:met_underlineColor="#00796B"
            app:met_floatingLabelAnimating="true"
            android:textColor="#212121"
            android:layout_below="@+id/ed_commdity_number"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
